{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020"],
    "target": "es2018",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "dist"]
}
